<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ThemeChooserDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">70%</item>
        <item name="android:windowMinWidthMinor">70%</item>
        <item name="chooserDialog_titleStyle">@style/ChooserDialog_titleStyle</item>
        <item name="chooserDialog_itemStyle">@style/ChooserDialog_itemStyle</item>
        <item name="chooserDialog_bodyStyle">@style/ChooserDialog_bodyStyle</item>
    </style>

    <style name="ChooserDialog_titleStyle">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/bg_header</item>
    </style>

    <style name="ChooserDialog_itemStyle">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ChooserDialog_bodyStyle">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:background">@drawable/xml_shape</item>
    </style>
    <!-- searchable dialog theme -->
    <style name="ThemeSearchableDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="chooserDialog_titleStyle">@style/ChooserDialog_titleStyle</item>
        <item name="chooserDialog_itemStyle">@style/ChooserDialog_itemStyle</item>
    </style>
    <style name="SearchableDialog_titleStyle">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="SearchableDialog_itemStyle">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SearchableDialog_bodyStyle">
        <item name="android:background">@color/white</item>
    </style>

    <style name="SearchableDialog_itemIconStyle">
        <item name="android:button">@drawable/searchable_item_icon</item>
    </style>
</resources>